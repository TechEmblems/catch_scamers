<h1 class="page-header">Installment Details</h1>

<p id="notice"><%= notice %></p>

<div class="table-responsive">
  <table class="table table-striped">
    <tbody>
    <tr>
      <td><strong>Purchase:</strong></td>
      <td><%= @installment.purchase_id %></td>
    </tr>

    <tr>
      <td><strong>Amount:</strong></td>
      <td><%= @installment.amount %></td>
    </tr>

    <tr>
      <td><strong>Paid on:</strong></td>
      <td><%= @installment.paid_on %></td>
    </tr>

    <tr>
      <td colspan="2">
        <%= link_to 'Edit', edit_installment_path(@installment), :class=>'btn btn-success' %>
        <%= link_to 'Back', installments_path, :class=>'btn btn-default' %>
      </td>
    </tr>
    </tbody>
  </table>
</div>
